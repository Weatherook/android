<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SigninActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/mainlogo2"
        android:layout_marginTop="85dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rightgray"

                />
            <EditText
                android:id="@+id/signin_id_tv"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:hint="아이디"
                android:textColorHint="#aaaaaa"
                android:textSize="20sp"
                android:background="@null"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:lines="1"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rightgray"
                />
            <EditText
                android:id="@+id/signin_pw_tv"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:hint="비밀번호"
                android:textColorHint="#aaaaaa"
                android:textSize="20sp"
                android:background="@null"
                android:singleLine="true"
                android:lines="1"
                android:password="true"
                />


        </RelativeLayout>


    </LinearLayout>



        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
      
            >


       <android.support.v7.widget.AppCompatCheckBox
           android:id="@+id/signin_keep_chkbox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:buttonTint="#555555"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"

           />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 유지"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/signin_keep_chkbox"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 잊으셨나요?"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                
                />


        </RelativeLayout>



    <RelativeLayout
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/signin_btn"
            android:layout_width="254dp"
            android:layout_height="45dp"
            android:src="@drawable/loginbar"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/signup_btn"
            android:layout_width="254dp"
            android:layout_height="45dp"
            android:src="@drawable/signupbar"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_btn"
            android:layout_marginTop="15dp"
            />

        <ImageView
            android:id="@+id/skip_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:src="@drawable/jump"
            android:layout_below="@id/signup_btn"
            android:layout_marginTop="34dp"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/skip_btn"
            android:layout_marginTop="40dp"
            android:src="@drawable/copyright"
            />

    </RelativeLayout>

</LinearLayout>