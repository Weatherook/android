<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/mainlogo"
        android:layout_marginTop="88dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        >




        <EditText
            android:id="@+id/signin_id_tv"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:hint="아이디"
            android:textColorHint="#741dff"
            android:textSize="15sp"
            android:textColor="#741dff"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#741dff"
            />

        <EditText
            android:id="@+id/signin_pw_tv"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:hint="비밀번호"
            android:textColorHint="#741dff"
            android:textSize="15sp"
            android:textColor="#741dff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_id_tv"
            android:backgroundTint="#741dff"
            />

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_pw_tv"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 유지"
                android:textSize="11sp"
                android:textColor="#741dff"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호를 잊으셨나요?"
                android:textSize="8sp"
                android:textColor="#741dff"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/signin_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:src="@drawable/login_1"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/signup_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:src="@drawable/login_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_btn"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:id="@+id/skip_btn"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:src="@drawable/login_3"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signup_btn"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/skip_btn"
            android:layout_marginTop="100dp"
            android:src="@drawable/mainlogo_mini"
            />

    </RelativeLayout>

</LinearLayout>