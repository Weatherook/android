<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/write_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/write_date_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7월 10일"
                android:textColor="@color/weatherookTheme" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/write_date">

            <TextView
                android:id="@+id/write_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="서울시 마포구" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/write_location">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="기온" />

            <TextView
                android:id="@+id/write_temp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 / 20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/write_temp"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="날씨" />
            <TextView
                android:id="@+id/write_weather_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맑음" />

        </LinearLayout>





    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fillViewport="true">

        <EditText
            android:id="@+id/write_editText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="start|top"
            android:background="@null"
            android:hint="글쓰기"
            android:minHeight="100dp"
            android:maxEms="10"
            android:scrollHorizontally="false" />

    </ScrollView>
</RelativeLayout>


</LinearLayout>