<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CommentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/join_close"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#7a7a7a" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/following_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/following_id"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/following_profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="ss_sd"
            android:textColor="#707070"
            />

        <ImageView
            android:id="@+id/following_heart"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/under_color_4"
            android:layout_toStartOf="@+id/following_count"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="328"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:textColor="#707070"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"


        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        >
    <TextView
        android:id="@+id/following_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="7월 4일"
        android:textStyle="bold"
        android:textColor="#741dff"
        />

    <TextView
        android:id="@+id/following_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/following_date"
        android:text="맑음"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#741dff"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/following_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/following_weather"
        android:text="27/20"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#741dff"
        android:layout_marginLeft="20dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/following_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="얇은 긴팔 티 하나 걸치고 나오니 딱 좋았던 아침."
        android:textSize="12sp"
        android:textColor="#707070"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:background="#7a7a7a" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_comment_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        >
        
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/following_comment_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7a7a7a" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/following_write_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerVertical="true"

            />

            <EditText
                android:id="@+id/following_comment_write"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:hint="댓글..."
                android:focusable="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/following_write_profile"
                android:background="@null"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시"
                android:layout_toRightOf="@id/following_comment_write"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


</LinearLayout>