<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/mainlogo"
        android:layout_marginTop="60dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        >




        <EditText
            android:id="@+id/signin_id_tv"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:hint="아이디"
            android:textColorHint="#741dff"
            android:textSize="15sp"
            android:textColor="#741dff"
            android:backgroundTint="#741dff"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/signin_pw_tv"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="비밀번호"
            android:textColorHint="#741dff"
            android:textSize="15sp"
            android:textColor="#741dff"
            android:backgroundTint="#741dff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_id_tv"
            />

        <EditText
            android:id="@+id/signin_check_tv"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="비밀번호 확인"
            android:textColorHint="#741dff"
            android:textSize="15sp"
            android:textColor="#741dff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signin_pw_tv"
            android:backgroundTint="#741dff"
            />



    </RelativeLayout>


</LinearLayout>