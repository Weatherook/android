<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/mainlogo2"
        android:layout_marginTop="60dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="43dp"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_rightgray"

                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signup_id_layout"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:textColorHint="#aaaaaa"
                    android:theme="@style/EditTextTheme"
                    >
                <EditText
                    android:id="@+id/signup_id_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="아이디"
                    android:textColorHint="#aaaaaa"
                    android:textSize="20sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_rightgray"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signup_pw_layout"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textColorHint="#aaaaaa"
                    android:theme="@style/EditTextTheme"
                    android:layout_centerInParent="true">
                <EditText
                    android:id="@+id/signup_pw_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호(6자 이상)"
                    android:textColorHint="#aaaaaa"
                    android:textSize="20sp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    android:password="true"
                    />

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_rightgray"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signup_check_layout"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:theme="@style/EditTextTheme"
                    android:textColorHint="#aaaaaa"
                    >
                <EditText
                    android:id="@+id/signup_check_tv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 확인"
                    android:textColorHint="#aaaaaa"
                    android:textSize="20sp"
                    android:background="@null"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:lines="1"
                    android:password="true"
                    />
                </android.support.design.widget.TextInputLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/signup_check_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#741dff"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="13sp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>


</LinearLayout>