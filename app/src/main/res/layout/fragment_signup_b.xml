<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <RelativeLayout
        android:id="@+id/signupb_tv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#555555"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:text="나에게 맞는 코디 추천을 위해\n
정보를 제공해주세요."
            android:layout_centerHorizontal="true"
            />
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="80dp"
        >
        <TextView
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:text="성별"
            android:textSize="22sp"
            android:textColor="#555555"
            android:textAlignment="textEnd"
            />
        <ImageView
            android:id="@+id/signup_women"
            android:layout_width="45dp"
            android:layout_height="68dp"
            android:clickable="true"
            android:src="@drawable/signup_woman"
            android:layout_marginLeft="35dp"
            />

        <ImageView
            android:id="@+id/signup_man"
            android:layout_width="45dp"
            android:layout_height="68dp"
            android:src="@drawable/signup_man"
            android:layout_toRightOf="@id/signup_women"
            android:layout_marginLeft="12dp"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="80dp"
        >
        <TextView
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:text="키"
            android:textSize="22sp"
            android:textColor="#555555"
            android:textAlignment="textEnd"
            />
        <EditText
            android:id="@+id/signin_height_tv"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="#555555"
            android:backgroundTint="#555555"
            style="@style/EditTextTheme"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#555555"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:text="cm"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="80dp"
        >
        <TextView
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:text="몸무게"
            android:textSize="22sp"
            android:textColor="#555555"
            android:textAlignment="textEnd"
            />
        <EditText
            android:id="@+id/signin_weight_tv"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="#555555"
            android:backgroundTint="#555555"
            style="@style/EditTextTheme"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#555555"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="7sp"
            android:text="kg"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>