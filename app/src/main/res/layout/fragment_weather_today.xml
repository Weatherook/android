<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="33dp"


                >
                <RelativeLayout
                    android:id="@+id/home_weather_info"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"

                    >

                    <TextView
                        android:id="@+id/home_weather_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="마포구"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_weather_location"
                        android:layout_centerHorizontal="true"
                        android:text="맑음"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        />

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@id/home_weather_location"
                        android:src="@drawable/main_sun"
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_weather_info"
                    android:layout_marginLeft="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="95dp"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/home_weather_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:text="27"
                            android:textSize="80sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7월3일 목요일"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/home_weather_temp"

                            />
                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="9dp" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:src="@drawable/main_sun"
                />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3c3c3c"

        />

    <RelativeLayout
        android:id="@+id/home_weather_change"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_weather_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:visibility="invisible"
            >

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/home_weather_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더운 날씨 속에 바람이 솔솔 불어옵니다.\n
가볍게 입고 외출하세요."
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#080808"
            android:lineSpacingExtra="3dp"
            android:textAlignment="center"
            />



    </RelativeLayout>

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="최고/최저 온도"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="17dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="27/20"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:text="비 올 확률"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="125dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:text="5%"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:text="습도"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:text="45%"
                android:textSize="8sp"
                android:textColor="#000000"
                android:layout_marginLeft="9dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3c3c3c"

        />

</LinearLayout>