<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/following_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/following_id"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="ss_sd"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/following_heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/under_color_4" />

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/following_heart"
                    android:text="328"
                    android:textColor="#707070"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/following_photo"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:src="@drawable/heart" />
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/following_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:text="7월 25일"/>
            <TextView
                android:id="@+id/following_weather"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:text="맑음"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:text="최고/최저 기온"/>

            <TextView
                android:id="@+id/following_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:text="25/31"/>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/following_popup"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/photo_menu"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/following_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="얇은 긴팔 티 하나 걸치고 나오니 딱 좋았던 아침."
                android:textColor="#707070"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/following_commentshow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/following_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="11sp"
                android:text="댓글 2개 모두 보기"
                android:textColor="#7e707070"
                android:textSize="12sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/following_comment_recycler"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/following_commentshow_btn"
                android:layout_marginTop="5dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/following_comment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/following_comment_recycler"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/following_comment_profile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher_background"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="댓글"
                    android:textColor="#7e707070"
                    android:textSize="12sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/following_comment_write"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_below="@id/following_comment_info"
                android:layout_marginTop="5dp"
                android:hint="댓글"
                android:background="@null"
                android:textSize="15sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_below="@id/following_comment_info"
                android:layout_toRightOf="@id/following_comment_write"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="작성하기" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>