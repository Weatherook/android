<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/join_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#741dff"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/join_close"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#741dff"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/signup_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/worm_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="#741dff"
            app:dotsCornerRadius="8dp"
            app:dotsSize="12dp"
            app:dotsSpacing="12dp"
            app:dotsStrokeWidth="2dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="32dp"
        android:layout_weight="2"
        >


        <ImageView
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/skip_btn"
            android:layout_alignParentBottom="true"
            android:src="@drawable/mainlogo_mini"
            />


    </RelativeLayout>

</LinearLayout>