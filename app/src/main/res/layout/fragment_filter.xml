<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/filter_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="나에게 맞는 코디를 더 자세히 찾아보세요!"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/filter_top"
        android:background="#707070" />


    <RelativeLayout
        android:id="@+id/filter_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_top"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/filter_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="오늘"
            android:textIsSelectable="true"
            android:textColor="@color/weatherookTheme"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filter_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/filter_today"
            android:text="전체"
            android:textIsSelectable="false"

            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/filter_frame"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_below="@+id/filter_tab">

    </FrameLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_state"
        android:text="필터 적용"
        android:textSize="15dp" />


</RelativeLayout>