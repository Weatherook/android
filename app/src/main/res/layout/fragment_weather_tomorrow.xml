<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal"
        android:text="내일"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#555555"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal"
        android:text="7월 2일 수요일"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:orientation="horizontal"
        android:layout_marginTop="27dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/tomorrow_am_image"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:src="@drawable/main_sun"
                />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="81dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="오전"

                    />
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/cross"
                    />

                <TextView
                    android:id="@+id/tomorrow_am_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="5sp"
                    android:gravity="end"
                    android:text="맑음"
                    android:layout_toLeftOf="@id/tomorrow_am_temp"
                    android:layout_above="@id/tomorrow_am_location"
                    />

                <TextView
                    android:id="@+id/tomorrow_am_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:layout_alignParentRight="true"
                    android:text="25º"
                    android:layout_above="@id/tomorrow_am_location"
                    />



                <TextView
                    android:id="@+id/tomorrow_am_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="서울시" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/tomorrow_pm_image"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:src="@drawable/main_cloud_sun_2"
                />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="81dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="오후"

                    />
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/cross"
                    />

                <TextView
                    android:id="@+id/tomorrow_pm_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="5sp"
                    android:gravity="end"
                    android:text="맑음"
                    android:layout_toLeftOf="@id/tomorrow_pm_temp"
                    android:layout_above="@id/tomorrow_pm_location"
                    />

                <TextView
                    android:id="@+id/tomorrow_pm_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:layout_alignParentRight="true"
                    android:text="25º"
                    android:layout_above="@id/tomorrow_pm_location"
                    />



                <TextView
                    android:id="@+id/tomorrow_pm_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="서울시" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>