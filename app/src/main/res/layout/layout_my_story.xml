<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.weatherook.weatherook.MyStoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_story_profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/heartcolor" />
        <TextView
            android:id="@+id/my_story_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="ss_sd"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/my_story_pic"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/brown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/my_story_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weatherookTheme"
            android:text="7월 25일"
            android:layout_marginRight="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/my_story_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weatherookTheme"
            android:text="맑음"
            android:layout_marginRight="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/my_story_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/weatherookTheme"
            android:text="25 / 31"
            android:layout_marginRight="15dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/my_story_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얇은 긴팔 티 하나 걸치고 나오기 딱 좋았던 아침."
            />
        <TextView
            android:id="@+id/my_story_hash"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="#오후엔더워쥬금"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 n개 모두보기"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Ahhh_ 오늘 갑자기 너무 더워졌어요"
            />

    </LinearLayout>

</LinearLayout>
